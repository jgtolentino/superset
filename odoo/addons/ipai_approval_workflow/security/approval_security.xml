<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Approval Workflow Security Groups -->
    <record id="module_category_approval" model="ir.module.category">
        <field name="name">Approval Workflow</field>
        <field name="description">Approval Workflow Management</field>
        <field name="sequence">25</field>
    </record>

    <record id="group_approval_user" model="res.groups">
        <field name="name">Approver</field>
        <field name="category_id" ref="module_category_approval"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">Can view and approve assigned requests</field>
    </record>

    <record id="group_approval_manager" model="res.groups">
        <field name="name">Approval Manager</field>
        <field name="category_id" ref="module_category_approval"/>
        <field name="implied_ids" eval="[(4, ref('group_approval_user'))]"/>
        <field name="comment">Can configure approval rules and manage all requests</field>
    </record>

    <!-- Record Rules -->
    <record id="approval_request_company_rule" model="ir.rule">
        <field name="name">Approval Request: Company</field>
        <field name="model_id" ref="model_ipai_approval_request"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    <record id="approval_rule_company_rule" model="ir.rule">
        <field name="name">Approval Rule: Company</field>
        <field name="model_id" ref="model_ipai_approval_rule"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    <!-- User can see requests they created or need to approve -->
    <record id="approval_request_user_rule" model="ir.rule">
        <field name="name">Approval Request: User Access</field>
        <field name="model_id" ref="model_ipai_approval_request"/>
        <field name="domain_force">['|', ('requester_id', '=', user.id), ('stage_ids.stage_id.approver_ids', 'in', [user.id])]</field>
        <field name="groups" eval="[(4, ref('group_approval_user'))]"/>
    </record>

    <!-- Managers can see all requests -->
    <record id="approval_request_manager_rule" model="ir.rule">
        <field name="name">Approval Request: Manager Access</field>
        <field name="model_id" ref="model_ipai_approval_request"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_approval_manager'))]"/>
    </record>
</odoo>
