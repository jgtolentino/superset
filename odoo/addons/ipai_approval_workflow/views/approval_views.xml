<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Approval Request Views -->

    <!-- Tree View -->
    <record id="view_approval_request_tree" model="ir.ui.view">
        <field name="name">ipai.approval.request.tree</field>
        <field name="model">ipai.approval.request</field>
        <field name="arch" type="xml">
            <tree string="Approval Requests" decoration-danger="is_escalated" decoration-success="state == 'approved'" decoration-muted="state in ('cancelled', 'rejected')">
                <field name="name"/>
                <field name="subject"/>
                <field name="rule_id"/>
                <field name="requester_id"/>
                <field name="current_stage_id"/>
                <field name="deadline"/>
                <field name="priority"/>
                <field name="is_escalated"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'pending'" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_approval_request_kanban" model="ir.ui.view">
        <field name="name">ipai.approval.request.kanban</field>
        <field name="model">ipai.approval.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="subject"/>
                <field name="requester_id"/>
                <field name="current_stage_id"/>
                <field name="is_escalated"/>
                <field name="priority"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.is_escalated.raw_value ? 'oe_kanban_color_2' : ''}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_title">
                                    <field name="priority" widget="priority"/>
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="subject"/>
                                    <div t-if="record.current_stage_id.value">
                                        <span class="badge rounded-pill bg-info">
                                            <field name="current_stage_id"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="deadline" widget="remaining_days"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="requester_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_approval_request_form" model="ir.ui.view">
        <field name="name">ipai.approval.request.form</field>
        <field name="model">ipai.approval.request</field>
        <field name="arch" type="xml">
            <form string="Approval Request">
                <header>
                    <button name="action_submit" type="object" string="Submit" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_approve" type="object" string="Approve" class="btn-success" invisible="state != 'pending'"/>
                    <button name="action_reject" type="object" string="Reject" class="btn-danger" invisible="state != 'pending'"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="state in ('approved', 'rejected', 'cancelled')"/>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft" invisible="state not in ('rejected', 'cancelled')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,pending,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <h2>
                            <field name="subject" placeholder="Subject" readonly="state != 'draft'"/>
                        </h2>
                    </div>
                    <group>
                        <group string="Request Information">
                            <field name="rule_id" readonly="state != 'draft'"/>
                            <field name="requester_id"/>
                            <field name="request_date"/>
                            <field name="priority"/>
                        </group>
                        <group string="Status">
                            <field name="current_stage_id" readonly="1"/>
                            <field name="deadline"/>
                            <field name="is_escalated"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" readonly="state != 'draft'"/>
                        </page>
                        <page string="Approval Stages" name="stages">
                            <field name="stage_ids" readonly="1">
                                <tree decoration-success="state == 'approved'" decoration-danger="state == 'rejected'" decoration-warning="state == 'pending'">
                                    <field name="sequence" widget="handle"/>
                                    <field name="stage_id"/>
                                    <field name="state" widget="badge"/>
                                    <field name="approved_by_id"/>
                                    <field name="approval_date"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Completion" name="completion" invisible="state not in ('approved', 'rejected')">
                            <group>
                                <field name="completed_date"/>
                                <field name="final_approver_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_approval_request_search" model="ir.ui.view">
        <field name="name">ipai.approval.request.search</field>
        <field name="model">ipai.approval.request</field>
        <field name="arch" type="xml">
            <search string="Search Requests">
                <field name="name"/>
                <field name="subject"/>
                <field name="requester_id"/>
                <filter string="My Requests" name="my_requests" domain="[('requester_id', '=', uid)]"/>
                <filter string="To Approve" name="to_approve" domain="[('state', '=', 'pending'), ('stage_ids.stage_id.approver_ids', 'in', [uid]), ('stage_ids.state', '=', 'pending')]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Pending" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                <separator/>
                <filter string="Escalated" name="escalated" domain="[('is_escalated', '=', True)]"/>
                <filter string="Urgent" name="urgent" domain="[('priority', '=', '3')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Rule" name="group_rule" context="{'group_by': 'rule_id'}"/>
                    <filter string="Requester" name="group_requester" context="{'group_by': 'requester_id'}"/>
                    <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_approval_request" model="ir.actions.act_window">
        <field name="name">Approval Requests</field>
        <field name="res_model">ipai.approval.request</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_approval_request_search"/>
        <field name="context">{'search_default_to_approve': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No approval requests
            </p>
            <p>
                Create approval requests for documents that need sign-off.
            </p>
        </field>
    </record>

    <record id="action_my_approval_requests" model="ir.actions.act_window">
        <field name="name">My Requests</field>
        <field name="res_model">ipai.approval.request</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_approval_request_search"/>
        <field name="context">{'search_default_my_requests': 1}</field>
    </record>
</odoo>
