<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Approval Rule Views -->

    <!-- Tree View -->
    <record id="view_approval_rule_tree" model="ir.ui.view">
        <field name="name">ipai.approval.rule.tree</field>
        <field name="model">ipai.approval.rule</field>
        <field name="arch" type="xml">
            <tree string="Approval Rules">
                <field name="name"/>
                <field name="rule_type"/>
                <field name="stage_count"/>
                <field name="approval_timeout_hours"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_approval_rule_form" model="ir.ui.view">
        <field name="name">ipai.approval.rule.form</field>
        <field name="model">ipai.approval.rule</field>
        <field name="arch" type="xml">
            <form string="Approval Rule">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_stages" icon="fa-list">
                            <field string="Stages" name="stage_count" widget="statinfo"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Rule Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Rule Configuration">
                            <field name="rule_type"/>
                            <field name="active"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="Timing">
                            <field name="approval_timeout_hours"/>
                        </group>
                    </group>
                    <group string="Amount Conditions" invisible="rule_type not in ('payment', 'journal_entry')">
                        <group>
                            <field name="min_amount"/>
                        </group>
                        <group>
                            <field name="max_amount"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Description..."/>
                    <notebook>
                        <page string="Approval Stages" name="stages">
                            <field name="stage_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="raci_role"/>
                                    <field name="approval_mode"/>
                                    <field name="approver_ids" widget="many2many_tags"/>
                                    <field name="approver_group_id"/>
                                    <field name="is_optional"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_approval_rule" model="ir.actions.act_window">
        <field name="name">Approval Rules</field>
        <field name="res_model">ipai.approval.rule</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first approval rule
            </p>
            <p>
                Define approval workflows with stages and approvers.
            </p>
        </field>
    </record>

    <!-- Approval Stage Views -->
    <record id="view_approval_stage_tree" model="ir.ui.view">
        <field name="name">ipai.approval.stage.tree</field>
        <field name="model">ipai.approval.stage</field>
        <field name="arch" type="xml">
            <tree string="Approval Stages">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="rule_id"/>
                <field name="raci_role"/>
                <field name="approval_mode"/>
                <field name="approver_ids" widget="many2many_tags"/>
                <field name="is_optional"/>
            </tree>
        </field>
    </record>

    <record id="view_approval_stage_form" model="ir.ui.view">
        <field name="name">ipai.approval.stage.form</field>
        <field name="model">ipai.approval.stage</field>
        <field name="arch" type="xml">
            <form string="Approval Stage">
                <sheet>
                    <group>
                        <group string="Stage Information">
                            <field name="name"/>
                            <field name="rule_id"/>
                            <field name="sequence"/>
                        </group>
                        <group string="Configuration">
                            <field name="raci_role"/>
                            <field name="approval_mode"/>
                            <field name="is_optional"/>
                        </group>
                    </group>
                    <group string="Approvers">
                        <field name="approver_ids" widget="many2many_tags"/>
                        <field name="approver_group_id"/>
                    </group>
                    <group string="Notifications">
                        <field name="notify_on_pending"/>
                        <field name="notify_on_complete"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_approval_stage" model="ir.actions.act_window">
        <field name="name">Approval Stages</field>
        <field name="res_model">ipai.approval.stage</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
