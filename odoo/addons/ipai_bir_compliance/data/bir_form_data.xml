<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence for BIR filings -->
        <record id="seq_bir_filing" model="ir.sequence">
            <field name="name">BIR Filing</field>
            <field name="code">ipai.bir.filing</field>
            <field name="prefix">BIR-%(year)s-</field>
            <field name="padding">4</field>
        </record>

        <!-- BIR Form: 1601-C Monthly Withholding Tax -->
        <record id="bir_form_1601c" model="ipai.bir.form">
            <field name="name">Monthly Remittance of Creditable Income Taxes Withheld</field>
            <field name="code">1601-C</field>
            <field name="form_type">withholding</field>
            <field name="frequency">monthly</field>
            <field name="due_day">10</field>
            <field name="due_month_offset">1</field>
            <field name="description">Monthly remittance return for creditable withholding taxes on compensation</field>
            <field name="approval_rule_id" ref="ipai_approval_workflow.approval_rule_bir_filing"/>
        </record>

        <!-- BIR Form: 2550M Monthly VAT -->
        <record id="bir_form_2550m" model="ipai.bir.form">
            <field name="name">Monthly VAT Declaration</field>
            <field name="code">2550M</field>
            <field name="form_type">vat</field>
            <field name="frequency">monthly</field>
            <field name="due_day">20</field>
            <field name="due_month_offset">1</field>
            <field name="description">Monthly value-added tax declaration</field>
            <field name="approval_rule_id" ref="ipai_approval_workflow.approval_rule_bir_filing"/>
        </record>

        <!-- BIR Form: 2550Q Quarterly VAT -->
        <record id="bir_form_2550q" model="ipai.bir.form">
            <field name="name">Quarterly VAT Return</field>
            <field name="code">2550Q</field>
            <field name="form_type">vat</field>
            <field name="frequency">quarterly</field>
            <field name="due_day">25</field>
            <field name="due_month_offset">1</field>
            <field name="description">Quarterly value-added tax return</field>
            <field name="approval_rule_id" ref="ipai_approval_workflow.approval_rule_bir_filing"/>
        </record>

        <!-- BIR Form: 0619E Expanded Withholding Tax -->
        <record id="bir_form_0619e" model="ipai.bir.form">
            <field name="name">Monthly Remittance of Expanded Withholding Tax</field>
            <field name="code">0619E</field>
            <field name="form_type">withholding</field>
            <field name="frequency">monthly</field>
            <field name="due_day">10</field>
            <field name="due_month_offset">1</field>
            <field name="description">Monthly remittance of expanded withholding tax</field>
            <field name="approval_rule_id" ref="ipai_approval_workflow.approval_rule_bir_filing"/>
        </record>

        <!-- BIR Form: 1701Q Quarterly Income Tax -->
        <record id="bir_form_1701q" model="ipai.bir.form">
            <field name="name">Quarterly Income Tax Return</field>
            <field name="code">1701Q</field>
            <field name="form_type">income</field>
            <field name="frequency">quarterly</field>
            <field name="due_day">15</field>
            <field name="due_month_offset">1</field>
            <field name="description">Quarterly income tax return for individuals, estates and trusts</field>
            <field name="approval_rule_id" ref="ipai_approval_workflow.approval_rule_bir_filing"/>
        </record>

        <!-- BIR Form: 2307 Certificate -->
        <record id="bir_form_2307" model="ipai.bir.form">
            <field name="name">Certificate of Creditable Tax Withheld at Source</field>
            <field name="code">2307</field>
            <field name="form_type">certificate</field>
            <field name="frequency">on_demand</field>
            <field name="due_day">20</field>
            <field name="due_month_offset">1</field>
            <field name="description">Certificate of creditable withholding tax at source</field>
        </record>

        <!-- BIR Form: 1604C Annual -->
        <record id="bir_form_1604c" model="ipai.bir.form">
            <field name="name">Annual Information Return of Income Taxes Withheld on Compensation</field>
            <field name="code">1604C</field>
            <field name="form_type">annual</field>
            <field name="frequency">annual</field>
            <field name="due_day">31</field>
            <field name="due_month_offset">1</field>
            <field name="description">Annual information return of compensation withholding taxes</field>
            <field name="approval_rule_id" ref="ipai_approval_workflow.approval_rule_bir_filing"/>
        </record>

        <!-- Cron job for due date reminders -->
        <record id="ir_cron_bir_due_dates" model="ir.cron">
            <field name="name">BIR: Check Due Dates</field>
            <field name="model_id" ref="model_ipai_bir_filing"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_due_dates()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>
