<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Month-End Close Security Groups -->
    <record id="module_category_month_end" model="ir.module.category">
        <field name="name">Month-End Close</field>
        <field name="description">Month-End Close Management</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_month_end_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_month_end"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_month_end_accountant" model="res.groups">
        <field name="name">Accountant</field>
        <field name="category_id" ref="module_category_month_end"/>
        <field name="implied_ids" eval="[(4, ref('group_month_end_user'))]"/>
    </record>

    <record id="group_month_end_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_month_end"/>
        <field name="implied_ids" eval="[(4, ref('group_month_end_accountant'))]"/>
    </record>

    <!-- Record Rules -->
    <record id="month_end_period_company_rule" model="ir.rule">
        <field name="name">Month-End Period: Company</field>
        <field name="model_id" ref="model_ipai_month_end_period"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    <record id="month_end_checklist_company_rule" model="ir.rule">
        <field name="name">Month-End Checklist: Company</field>
        <field name="model_id" ref="model_ipai_month_end_checklist"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
</odoo>
