# Notion Sync Service - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# NOTION CONFIGURATION
# =============================================================================

# Notion internal integration token
# Get this from: https://www.notion.so/my-integrations
NOTION_API_KEY=

# Notion Database IDs (from database URLs)
# Format: https://notion.so/{workspace}/{database_id}?v=...
NOTION_PROGRAMS_DB_ID=
NOTION_PROJECTS_DB_ID=
NOTION_BUDGET_LINES_DB_ID=
NOTION_RISKS_DB_ID=
NOTION_ACTIONS_DB_ID=

# =============================================================================
# DATABRICKS CONFIGURATION
# =============================================================================

# Databricks workspace URL (e.g., https://adb-xxx.azuredatabricks.net)
DATABRICKS_HOST=

# Databricks personal access token or OAuth token
DATABRICKS_TOKEN=

# SQL Warehouse HTTP path (e.g., /sql/1.0/warehouses/xxx)
DATABRICKS_HTTP_PATH=

# Unity Catalog name (default: main)
DATABRICKS_CATALOG=main

# =============================================================================
# SYNC SETTINGS (optional)
# =============================================================================

# Batch size for API requests (default: 100, max: 1000)
# BATCH_SIZE=100

# Max retry attempts (default: 3)
# MAX_RETRIES=3

# Backoff factor for retries (default: 2.0)
# BACKOFF_FACTOR=2.0

# Rate limit delay in seconds (default: 0.34 for Notion's 3 req/sec)
# RATE_LIMIT_DELAY=0.34

# =============================================================================
# LOGGING (optional)
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
# LOG_LEVEL=INFO

# Use JSON format for logs (default: true)
# LOG_JSON=true
