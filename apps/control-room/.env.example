# Control Room - Environment Variables
# Copy to .env.local and fill in your values

# =============================================================================
# DATABRICKS CONFIGURATION
# =============================================================================

# Databricks workspace URL (e.g., https://adb-xxx.azuredatabricks.net)
DATABRICKS_HOST=

# Databricks access token (PAT or OAuth)
DATABRICKS_TOKEN=

# SQL Warehouse HTTP path (e.g., /sql/1.0/warehouses/xxx)
DATABRICKS_HTTP_PATH=

# Unity Catalog name
DATABRICKS_CATALOG=main

# =============================================================================
# NOTION CONFIGURATION (for creating actions)
# =============================================================================

# Notion API key for creating action items
NOTION_API_KEY=

# Notion Actions database ID
NOTION_ACTIONS_DB_ID=

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# API secret for signing tokens (generate a random 32-char string)
API_SECRET_KEY=

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Log level: debug, info, warn, error
# LOG_LEVEL=info

# Enable mock data for development
# MOCK_DATA=true
